<div class="jumbotron border-round-0 min-50vh" style="background-image:url(<%= @bloger.opus.first.image%>);"></div>
<div class="container mb-4">
    <%= image_tag("av.png",width:"128",class:"mt-neg100 mb-4 rounded-circle") %>
    <h1 class="font-weight-bold title">
        <%= @bloger.username %>
    </h1>
    <% if @bloger.description%>
        <p>
            <%= @bloger.username %>
            I love Art, Web Design, Photography, Design, Illustration
        </p>
    <% else %>
        <p>
            这个人好懒啊～，什么都没写！
        </p>
    <% end %>
    <p>
        IP属地:
        <% if @bloger.area%>
            <%= @bloger.area%>
        <% else %>
            未知
        <% end %>
    </p>
    <% if @bloger==@user %>
        <%= link_to "上传作品",{:action => "new",:controller => "opus",:id => @user.id}%>
    <% end %>
    <div class="row">
        <div class="card-columns" style="padding:20px">
            <% @bloger.opus.each do |opu|%>
                <div class="card card-pin">
                    <%= image_tag opu.image,class:"card-img",alt:"Card image"%>
                    <div class="overlay">
                        <h2 class="card-title title">Cool Title</h2>
                        <div class="more">
                            <a href="/opus/details">
                            <i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i> More </a>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>