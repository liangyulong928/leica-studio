<section class="bg-gray200 pt-5 pb-5">
    <div class="container">
    	<div class="row justify-content-center">
    		<div class="col-md-7">
    			<article class="card">
				<%= image_tag @opu.image,class:"card-img-top mb-2",alt:"Card image"%>
    			<div class="card-body">
				<%= form_tag opu_path(@opu),:method => :put do%>
					<h1 class="card-title display-4">标题：<%= text_field :opu,'opusname'%> </h1>
					<p>作品简介：<%= text_area :opu,'description'%></p>
					<%= submit_tag '保存'%>
				<% end %>
    			</div>
    			</article>
    		</div>
    	</div>
    </div>
</section>